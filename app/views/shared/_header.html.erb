<header class="bg-white flex flex-row justify-between items-center h-20 relative text-white">
  <div class="ml-4 md:mx-5 hover:text-blue-600 transition duration-300 text-lg" style="display: flex; align-items: flex-end;">
    <%= link_to root_path do %>
      <%= image_tag('portfolio.png', alt: 'ポートフォリオ', style: 'margin-top: 80px;') %>
    <% end %>
  </div>

  <div class="flex items-center space-x-3 lg:mx-5">
    <% if user_signed_in? %>
      <%= link_to '記事投稿', "#", class: "btn btn-primary" %>
      <%= link_to 'マイページ', mypage_path, class: "btn btn-primary" %>
      <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, data: { turbo: false }, class: "btn btn-primary" %>
    <% else %>
      <%= link_to '記事投稿', "#", class: "btn btn-primary" %>
      <%= link_to '新規登録', new_user_registration_path, class: "btn btn-primary" %>
      <%= link_to 'ログイン', new_user_session_path, class: "btn btn-primary" %>
    <% end %>
  </div>
</header>

