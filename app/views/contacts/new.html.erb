<div class="flex flex-col items-center justify-start min-h-screen">
  <h1 class="text-4xl font-bold my-6 fixed top-0 w-full text-center py-4 text-white">お問い合わせ</h1>
  <div class="flex flex-col items-center justify-center w-full max-w-6xl mx-auto" style="margin-top: 80px;">
    <div class="text-center mt-6">
      <%= form_with model: @contact, local: true do |form| %>
        <div class="mb-6">
          <%= form.label :name, "名前", class: "text-xl block font-bold mb-2 text-white" %>
          <%= form.text_field :name, class: "shadow appearance-none border rounded py-2 px-3 text-white leading-tight focus:outline-none focus:shadow-outline" %>
        </div>

        <div class="mb-6">
          <%= form.label :email, "メールアドレス", class: "text-xl block font-bold mb-2 text-white" %>
          <%= form.email_field :email, class: "shadow appearance-none border rounded py-2 px-3 text-white leading-tight focus:outline-none focus:shadow-outline" %>
        </div>

        <div class="mb-6">
          <%= form.label :message, "メッセージ", class: "text-xl block font-bold mb-2 text-white" %>
          <%= form.text_area :message, rows: 10, class: "shadow appearance-none border rounded py-2 px-3 text-white leading-tight focus:outline-none focus:shadow-outline" %>
        </div>

        <div class="flex justify-center space-x-4">
          <%= form.submit '送信', class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
