<div class="flex flex-col items-center justify-center min-h-screen bg-gray-100">
  <div class="text-center">
    <h1 class="text-4xl font-bold text-gray-900 mb-6">ユーザー登録</h1>

      <div class="card-body">
        <%= form_with(model: resource, scope: :user, url: registration_path(resource_name), local: true) do |f| %>
          <div class="text-xl text-gray-800 mb-2">
            <%= f.email_field :email, class: "form-control", placeholder: "メールアドレス" %>
          </div>

          <div class="text-xl text-gray-800 mb-2">
            <%= f.text_field :name, class: "form-control", placeholder: "名前", autocomplete: "username" %>
          </div>
          <div class="text-xl text-gray-800 mb-2">
            <%= f.password_field :password, class: "form-control", placeholder: "パスワード" , autocomplete: "new-password" %>
          </div>

          <div class="text-xl text-gray-800 mb-2">
            <%= f.password_field :password_confirmation, class: "form-control", placeholder: "パスワード確認" , autocomplete: "new-password" %>
          </div>

          <%= f.submit "ユーザー登録", class: "btn btn-primary w-100" %>
        <% end %>

        <% if notice.present? %>
          <p class="notice"><%= notice %></p>
        <% elsif alert.present? %>
          <p class="alert"><%= alert %></p>
        <% end %>
      </div>
    </div>

    <div class="card text-center py-2 mt-3 mx-auto" style="width: 23rem;">
      <div class="card-text">
        既にアカウントを持っている？
        <%= link_to "ログイン", new_user_session_path, class: "text-blue-500 hover:text-blue-800" %>
      </div>
    </div>
  </div>
</div>