<% content_for :title, "タスク一覧" %>
<div class="container mt-5">
  <h1 class="mb-4">タスク一覧</h1>

  <table class="table">
    <thead>
      <tr>
        <th>タイトル</th>
        <th>期限</th>
        <th>完了状況</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.title %></td>
          <td><%= task.due_date %></td>
          <td><%= task.completed ? '完了' : '未完了' %></td>
          <td><%= link_to '詳細', task, class: 'btn btn-primary' %></td>
          <td><%= link_to '編集', edit_task_path(task), class: 'btn btn-warning' %></td>
          <td><%= link_to '削除', task, method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to '新規タスク作成', new_task_path, class: 'btn btn-success' %>
</div>